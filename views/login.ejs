<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>suryapolina.com</title>
    <!-- Include Tailwind CSS from CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.1.2/dist/tailwind.min.css" rel="stylesheet">
    <!-- Custom styles -->
    <link rel="icon" type="image/png" href="images/favicon.ico">
    <style>
        .form-control {
            background: #edf2f7; /* light gray background */
            border: 2px solid transparent;
            padding-left: 2.5rem; /* space for icons */
            transition: background 0.2s, border-color 0.2s;
        }
        .form-control:focus {
            background: #fff; /* white background on focus */
            border-color: #3182ce; /* light blue border on focus */
        }
        .form-icon {
            position: absolute;
            left: 0.75rem; /* align icon inside the input field */
            top: 50%;
            transform: translateY(-50%);
        }
    </style>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div class="max-w-sm w-full mx-auto p-8 bg-white rounded-lg shadow-md">
        <h1 class="text-2xl font-bold mb-8 text-center">Login</h1>
        <form action="/login" method="post" class="space-y-6">
            <div class="relative">
                <span class="fas fa-user form-icon text-gray-400"></span>
                <input type="text" name="username" id="username" placeholder="Username" required
                       class="form-control w-full pl-10 pr-4 py-2 rounded-md focus:outline-none">
            </div>
            <div class="relative">
                <span class="fas fa-lock form-icon text-gray-400"></span>
                <input type="password" name="password" id="password" placeholder="Password" required
                       class="form-control w-full pl-10 pr-4 py-2 rounded-md focus:outline-none">
            </div>
            <div class="relative">
                <span class="fas fa-key form-icon text-gray-400"></span>
                <input type="text" name="code" id="code" placeholder="2FA Code" required
                       class="form-control w-full pl-10 pr-4 py-2 rounded-md focus:outline-none" pattern="[0-9]*" inputmode="numeric">
            </div>
            <input type="submit" value="Login" class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-700 cursor-pointer focus:outline-none">
        </form>
    </div>
    <!-- Include FontAwesome for icons (if not already included) -->
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js"></script>
    <script>
        // Function to display an alert with the given message
        function showAlert(message) {
            alert(message);
        }

        // Check if there's an error message from the server and display an alert
        const errorMessage = '<%= errorMessage %>'; // Replace with the actual variable name used in your EJS template

        if (errorMessage) {
            showAlert(errorMessage);
        }
    </script>
</body>
</html>
